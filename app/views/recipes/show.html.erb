<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<p>
  <strong>Instructions:</strong>
  <%= @recipe.instructions %>
</p>

<p>
  <strong>Category:</strong>
  <%= link_to(@recipe.category.name, category_path(@recipe.category.id)) %>
</p>
<p><strong>Image:</strong>
<%= link_to image_tag(@recipe.recipe_image.thumb.url), @recipe.recipe_image.medium.url %></p>
<p>
  <strong>Ingredients:</strong>
  <ul>
    <%# @recipe.ingredients.each do |ingredient| %>
    <!-- <li><%#= link_to ingredient.name, ingredient_path(ingredient) %></li> -->
    <%# end %>
    <% @recipe.quantities.each do |quantity| %>
      <%= quantity.ingredient.try(:name) %> - <%= quantity.quantity %><br>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_recipe_path(@recipe) if can? :edit, @recipe%> |
<%= link_to 'Back to Recipe', recipes_path %> |
<%= link_to("Back to #{@recipe.category.name}", category_path(@recipe.category.id)) %>
